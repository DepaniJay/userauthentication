<!doctype html>
<html lang="en">

<head>
    {{>headerLink}}
    <title>JD Web Solution - Register page</title>
</head>

<body>

    {{>navbar}}


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="registerForm">
                    <h1>Edit Your Profile <span></span></h1>
                    <form action="" method="" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label for="firstname">First name</label>
                                    <input type="text" class="form-control inputStyle" id="firstname" name="firstname"
                                        aria-describedby="emailHelp" placeholder="Enter your firstname" value="">
                                    <small id="firstnameError" class="form-text"></small>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label for="lastname">Last name</label>
                                    <input type="text" class="form-control inputStyle" name="lastname" id="lastname"
                                        aria-describedby="emailHelp" placeholder="Enter your lastname" value="">
                                    <small id="lastnameError" class="form-text"></small>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email </label>
                            <input type="email" class="form-control inputStyle" name="email" id="email"
                                aria-describedby="emailHelp" placeholder="Enter email" value="">
                            <small id="emailError" class="form-text"></small>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone no</label>
                            <input type="number" class="form-control inputStyle" name="phone" id="phone"
                                aria-describedby="emailHelp" placeholder="Enter your phone no" value="">
                            <small id="phoneError" class="form-text"></small>
                        </div>

                        <div class="form-group">
                            <label for="profileImg">Upload profile image</label>
                            <input type="file" class="form-control inputStyle" name="filename" id="profileImg" value="">
                            <small id="imageError" class="form-text"></small>
                        </div>

                        <div class="form-group">
                            <label for="gender">Gender</label>
                            <select class="form-control" id="gender" name="gender">
                                <option value="" selected>Select gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control inputStyle" name="password" id="password"
                                        placeholder="Password" value="">
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group">
                                    <label for="cpassword">Confirm Password</label>
                                    <input type="password" class="form-control inputStyle" name="cpassword"
                                        id="password" placeholder="Confirm Password" value="">
                                    <small id="passwordError" class="form-text"></small>
                                </div>
                            </div>
                        </div>
                        <button type="submit" id="editProfileBtn" class="btn " value="EditProfile">Edit Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    {{>footer}}
</body>

</html>